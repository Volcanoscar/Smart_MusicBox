<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_margin="20dip"
    android:layout_marginRight="50dip"
    
    android:focusable="false"
    android:background="@drawable/edit_bg">
<RelativeLayout   android:layout_width="match_parent"
                          android:layout_height="match_parent" >

     <TextView android:id="@+id/download_title"
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:textColor="@android:color/white"
                    android:text="正在拷贝"
                    android:textSize="20sp"
                    android:focusable="false"
                    android:layout_alignParentTop="true"
                    android:gravity="center"/>"
    
    <LinearLayout
            android:layout_below="@id/download_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_marginLeft="20dip"      
             android:layout_marginRight="20dip"           
                  
             android:orientation="horizontal">
          <ImageView 
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"     
                           
                android:background="@drawable/mobile"
                android:layout_gravity="center_vertical"/>
          <ImageView 
                android:id="@+id/download_progress_progress"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="3" 
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_gravity="center_vertical"/>
            <ImageView 
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tv"
                android:layout_gravity="center_vertical"
                />
    </LinearLayout>
</RelativeLayout>

    <!-- 下载结果提示 -->

    <TextView
        android:id="@+id/download_progress_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity=""
        android:text="@string/file_download_result" 
        android:visibility="gone" />

</FrameLayout>