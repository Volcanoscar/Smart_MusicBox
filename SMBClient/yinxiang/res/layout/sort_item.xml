<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/sort_catalog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:paddingLeft="20dip"
        android:visibility="gone"
        android:text="A"/>

  <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dip"
     android:layout_marginRight="30dip"
     android:layout_marginBottom="10dip">
      
  <View 
        android:id="@+id/sort_divideline"      
        style="@style/bg_line"
         />
  
    <ImageView
        android:id="@+id/item_logo"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dip"
        android:src="@drawable/singer_default"
        android:scaleType="fitCenter"/>"

    <TextView
        android:id="@+id/item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_logo"
        android:layout_alignBottom="@id/item_logo"        
        android:layout_marginLeft="20dip"
        android:paddingBottom="2dip"       
        android:textSize="@dimen/text_content"    
        android:textColor="@color/text_default"
      />
    
    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/item_content"
        android:layout_alignLeft="@id/item_content"               
        android:textSize="@dimen/text_title"    
        android:textColor="@color/text_title"/>
    
    <ImageView
        android:id="@+id/item_next"
        android:layout_width="10dip"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip" 
        android:layout_centerVertical="true"
        android:src="@drawable/right" 
        android:scaleType="fitCenter"/>   
        
     <View style="@style/bg_line" 
        android:layout_below="@id/item_logo"
        android:layout_alignLeft="@id/item_logo" 
        android:layout_marginTop="5dip" />
    
</RelativeLayout>
</LinearLayout>