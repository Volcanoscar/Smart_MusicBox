<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/singer_image"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dip"
        android:src="@drawable/singer_default"
        android:scaleType="fitCenter"/>"

    <TextView
        android:id="@+id/singer_likecount"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/singer_image"
        android:layout_alignBottom="@id/singer_image"        
        android:layout_marginLeft="20dip"
        android:textSize="@dimen/text_content"    
        android:textColor="@color/text_default"
      />
    
    <TextView
        android:id="@+id/singer_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@id/singer_likecount"
        android:layout_alignLeft="@id/singer_likecount"               
        android:textSize="@dimen/text_content"    
        android:textColor="@color/text_default"/>
    
    <ImageView
        android:id="@+id/singer_more"
        android:layout_width="20dip"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dip" 
        android:gravity="center_vertical"
        android:src="@drawable/select_right" 
        android:scaleType="fitCenter"/>
    
</RelativeLayout>