<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:layout_marginLeft="10dip"
              android:layout_marginRight="20dip"
              android:background="@android:color/transparent" >

    <ImageView
            android:id="@+id/yinxiang_vedio_item_image"
            android:layout_height="70dp"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:scaleType="fitCenter"/>

    <TextView
            android:id="@+id/yinxiang_vedio_item_name"
            android:layout_height="match_parent"
            android:layout_width="0dip"
            android:layout_weight="3"
            android:paddingLeft="5dp"
            android:textSize="11sp"
            android:textColor="@color/white"/>
 <!-- 
    <ImageView
            android:id="@+id/yinxiang_vedio_item_edit"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:paddingRight="15dip"
            android:src="@drawable/file_edit"
            android:adjustViewBounds="true" 
            
            android:background="@drawable/file_edit_btn_bg"/>
   -->
 
    <CheckBox
            android:id="@+id/yinxiang_vedio_item_checked"
            android:layout_height="30dip"
            android:layout_width="30dip"
            style="@style/MyCheckBox"/>
 
    <TextView
            android:id="@+id/yinxiang_vedio_item_path"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:visibility="gone">
    </TextView>

</LinearLayout>