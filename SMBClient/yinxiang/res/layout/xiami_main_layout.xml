<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:paddingBottom="5dp"
     >

    <include layout="@layout/ip_setting" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:paddingLeft="5dp"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 今日推荐歌曲 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/xiami_main_today_recommend"
                    android:layout_weight="3"
                    android:background="@drawable/xiami_main_boder" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/xiami_main_title_height"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="今日推荐歌曲"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/xiami_recommend_today_more"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/xiami_main_title_height"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/select_right" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="42dp"
                        android:background="@color/blue" />

                    <com.changhong.common.widgets.HorizontalListView
                        android:id="@+id/xiami_recommend_today"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_marginTop="40dp" 
                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/xiami_main_today_recommend"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/xiami_main_boder"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageButton
                        android:id="@+id/xiami_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/search_button" />

                    <ImageButton
                        android:id="@+id/xiami_random_songs"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/random" />
                </LinearLayout>
            </LinearLayout>

            <!-- 新碟首发 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/xiami_main_boder"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/xiami_main_title_height"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="新碟首发"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/xiami_recommend_album_more"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/xiami_main_title_height"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/select_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="42dp"
                    android:background="@color/blue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="45dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal" >

                        <ImageView
                            android:id="@+id/xiami_new_album1"
                            android:layout_width="wrap_content"
                            android:layout_height="160dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/singer_default" />

                        <ImageView
                            android:id="@+id/xiami_new_album1_play"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="100dp"
                            android:background="@drawable/music_details_play" />

                        <TextView
                            android:id="@+id/xiami_new_album1_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="165dp"
                            android:gravity="center_horizontal"
                            android:text="专辑1" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1" >

                        <ImageView
                            android:id="@+id/xiami_new_album2"
                            android:layout_width="wrap_content"
                            android:layout_height="160dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/singer_default" />

                        <ImageView
                            android:id="@+id/xiami_new_album2_play"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="100dp"
                            android:background="@drawable/music_details_play" />

                        <TextView
                            android:id="@+id/xiami_new_album2_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="165dp"
                            android:gravity="center_horizontal"
                            android:text="专辑2" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1" >

                        <ImageView
                            android:id="@+id/xiami_new_album3"
                            android:layout_width="wrap_content"
                            android:layout_height="160dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/singer_default" />

                        <ImageView
                            android:id="@+id/xiami_new_album3_play"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="100dp"
                            android:background="@drawable/music_details_play" />

                        <TextView
                            android:id="@+id/xiami_new_album3_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="165dp"
                            android:gravity="center_horizontal"
                            android:text="专辑3" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <!-- 排行榜 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/xiami_main_boder"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/xiami_main_title_height"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="排行榜"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/xiami_rank_more"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/xiami_main_title_height"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/select_right" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="42dp"
                        android:background="@color/blue" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="45dp"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            >

                            <ImageView
                                android:id="@+id/xiami_hyrank_image"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="20sp" />


                            <ImageView
                                android:id="@+id/xiami_hyrank_play"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
								android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/music_details_play" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/gray" />
                        
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            >

                            <ImageView
                                android:id="@+id/xiami_omrank_image"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="20sp" />


                            <ImageView
                                android:id="@+id/xiami_omrank_play"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
								android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/music_details_play" />
                        </RelativeLayout>

                    </LinearLayout>
                </RelativeLayout>

                <!-- 音乐会 -->

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="3"
                    android:background="@drawable/xiami_main_boder" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/xiami_main_title_height"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="音乐会"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/xiami_concert_more"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/xiami_main_title_height"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/select_right" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="42dp"
                        android:background="@color/blue" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="45dp"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/xiami_concert_album"
                                android:layout_width="0dp"
                                android:layout_height="60dp"
                                android:layout_weight="1"
                                android:src="@drawable/singer_default" />

                            <ImageView
                                android:id="@+id/xiami_concert_scene"
                                android:layout_width="0dp"
                                android:layout_height="60dp"
                                android:layout_weight="1"
                                android:src="@drawable/singer_default" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:background="@color/gray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/xiami_concert_artist"
                                android:layout_width="0dp"
                                android:layout_height="60dp"
                                android:layout_weight="1"
                                android:src="@drawable/singer_default" />

                            <ImageView
                                android:id="@+id/xiami_concert_collection"
                                android:layout_width="0dp"
                                android:layout_height="60dp"
                                android:layout_weight="1"
                                android:src="@drawable/singer_default" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>