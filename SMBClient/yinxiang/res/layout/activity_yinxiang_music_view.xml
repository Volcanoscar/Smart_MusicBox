<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/main_bg">

    <!--IP选择-->

    <LinearLayout
            android:layout_height="60dip"
            android:layout_width="fill_parent"
            android:focusable="false"
            android:orientation="horizontal"
            android:gravity="center">

        <TextView
                android:id="@+id/title"
                android:layout_width="80dip"
                android:layout_height="64.3dip"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="未连接"
                android:textSize="20sp" />

        <ImageView
                android:layout_width="16.7dip"
                android:layout_height="10.7dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/title_ip_select" />
    </LinearLayout>

    <Button
            android:id="@+id/btn_back"
            android:background="@drawable/title_btn_back_selector"
            android:layout_width="80.5dip"
            android:layout_height="77.3dip"
            android:layout_marginLeft="0dip"/>

    <!--中间内容-->

    <LinearLayout
            android:layout_height="500dp"
            android:layout_width="fill_parent"
            android:layout_marginTop="60dip"
            android:focusable="false"
            android:orientation="vertical">"
        
        <!-- 存储设备选择 -->
         <RadioGroup
            android:id="@+id/music_rgtab"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="@drawable/musictab_bg"
            android:orientation="horizontal" >

            <RadioButton
                style="@style/yx_tab"
                android:layout_height="match_parent" 
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"                
                android:drawableBottom="@drawable/musictab_selector"
                android:text="手机" 
                android:textSize="16sp"
                android:textColor="@drawable/musictab_textcolor_selector"/>

            <RadioButton
                style="@style/yx_tab"
                android:layout_height="match_parent"
                 android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:drawableBottom="@drawable/musictab_selector"               
                android:text="音响"
                android:textSize="16sp"
                android:textColor="@drawable/musictab_textcolor_selector"/>

            <RadioButton
                style="@style/yx_tab"
                android:layout_height="match_parent"
                 android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"                
                android:drawableBottom="@drawable/musictab_selector"
                android:text="外设"
                android:textSize="16sp"
                android:textColor="@drawable/musictab_textcolor_selector"/>
            
        </RadioGroup>
        
        
        <ListView
                android:id="@+id/yinxiang_music_list_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:divider="@null"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_height="60dip"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@drawable/fragment_bg"
            android:gravity="center">
        
        <View android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2"/>

        <!-- 推送 -->
        <Button
                android:id="@+id/yinxing_music_tuisong"
                android:background="@drawable/btn_send_selector"
                android:layout_width="42dip"
                android:layout_height="match_parent"/>
        
        <View android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        
        <!-- 全选 -->
        <Button
                android:id="@+id/yinxing_music_checkall"
                android:background="@drawable/btn_checkall_selector"        
                android:layout_width="42dip"
                android:layout_height="match_parent"/>
        
        <!-- 取消全选 -->
        <TextView
                android:layout_width="42dip"
                android:layout_height="match_parent"
                 android:layout_marginLeft="20dip"/>
        
        <!--  
        <TextView
                android:id="@+id/yinxing_music_tuisong_info"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="你选择了0部视频"/>
                         -->
            </LinearLayout>
   

    <!-- IP选择 -->

    <ListView
            android:id="@+id/clients"
            android:layout_width="match_parent"
            android:layout_height="558dip"
            android:layout_marginTop="67.6dip"
            android:background="@drawable/title_ip_list_bg"
            android:listSelector="@drawable/title_ip_list"
            android:visibility="gone" />

    <Button
            android:id="@+id/btn_list"
            android:layout_width="204dip"
            android:layout_height="49.8dip"
            android:layout_marginLeft="70dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/title_btn_list_selector" />
</RelativeLayout>
