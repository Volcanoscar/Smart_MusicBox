<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

  
    
    <LinearLayout  android:layout_height="46dip"
            android:layout_width="match_parent"
            android:layout_margin="10dip"
            android:orientation="horizontal">
        
    
    <!-- 序号 -->
    <TextView
            android:id="@+id/yinxiang_music_item_index"
            android:layout_height="match_parent"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:textColor="@color/grey"
            android:gravity="center_vertical"/>
    <!-- 歌曲 -->
    <TextView
            android:id="@+id/yinxiang_music_item_name"
            android:layout_height="match_parent"
            android:layout_width="0dip"
            android:layout_weight="5"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:singleLine="true"
            android:ellipsize="marquee"          
            android:marqueeRepeatLimit="marquee_forever"
            android:gravity="center_vertical"/>"
    
    <!-- 歌手 -->
     <TextView
            android:id="@+id/yinxiang_music_item_artist"            
           android:layout_height="match_parent"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:textSize="12sp"
            android:textColor="@color/grey"
            android:singleLine="true"
            android:ellipsize="marquee"          
            android:marqueeRepeatLimit="marquee_forever"
            android:gravity="center"/>
    
    

     <ImageView
            android:id="@+id/yinxiang_music_item_edit"
            android:layout_height="match_parent"
            android:layout_width="26dip"
            android:src="@drawable/file_edit"
            android:scaleType="fitCenter"/>
     
     <TextView
            android:id="@+id/yinxiang_music_item_path"
            android:layout_width="20dip"
            android:layout_height="2dip"   
            android:visibility="invisible"/>
     
    <CheckBox
            android:id="@+id/yinxiang_music_item_checked"
            android:layout_height="match_parent"
            android:layout_width="0dip"
            android:layout_weight="1"        
            style="@style/MyCheckBox"/>
    
   
    
   
    
    </LinearLayout>
    
      <!-- 分割线 -->
    <ImageView  
            android:layout_width="match_parent"
            android:layout_height="1dip"  
            android:layout_alignParentBottom="true"
            android:background="@drawable/separator"/>

</RelativeLayout>