<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yinxiang_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <!-- IP选择 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="67.6dip"
            android:background="@drawable/title_banner"
            android:focusable="false"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/title"
                android:layout_width="80dip"
                android:layout_height="64.3dip"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="未连接"
                android:textSize="20sp" />

            <ImageView
                    android:layout_width="16.7dip"
                    android:layout_height="10.7dip"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/title_ip_select" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_back"
            android:layout_width="80.5dip"
            android:layout_height="77.3dip"
            android:layout_marginLeft="0dip"
            android:background="@drawable/title_btn_back_selector" />

        <!-- 中间内容 -->
		<Button 
		    android:id="@+id/bt"
		    android:layout_width="125dip"
		    android:layout_height="125dip"
		    android:background="@drawable/btn_bt_selector"
		    android:layout_marginLeft="52.5dip"
            android:layout_marginTop="152dip"
		    />
		<Button 
		    android:id="@+id/av1"
		    android:layout_width="125dip"
		    android:layout_height="125dip"
		    android:background="@drawable/btn_av1_selector"
		    android:layout_marginLeft="186.5dip"
            android:layout_marginTop="152dip"
		    />
		<Button 
		    android:id="@+id/av2"
		    android:layout_width="125dip"
		    android:layout_height="125dip"
		    android:background="@drawable/btn_av2_selector"
		    android:layout_marginLeft="52.5dip"
            android:layout_marginTop="288dip"
		    />
		<Button 
		    android:id="@+id/hdmi"
		    android:layout_width="125dip"
		    android:layout_height="125dip"
		    android:background="@drawable/btn_hdmi_selector"
		    android:layout_marginLeft="186.5dip"
            android:layout_marginTop="288dip"
		    />
		<Button 
		    android:id="@+id/ott"
		    android:layout_width="125dip"
		    android:layout_height="125dip"
		    android:background="@drawable/btn_ott_selector"
		    android:layout_marginLeft="52.5dip"
            android:layout_marginTop="424dip"
		    />
        <!-- IP选择 -->

        <ListView
                android:id="@+id/clients"
                android:layout_width="match_parent"
                android:layout_height="558dip"
                android:layout_marginTop="67.6dip"
                android:background="@drawable/title_ip_list_bg"
                android:listSelector="@drawable/title_ip_list"
                android:visibility="gone" />

        <Button
                android:id="@+id/btn_list"
                android:layout_width="204dip"
                android:layout_height="49.8dip"
                android:layout_marginLeft="70dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/title_btn_list_selector" />
    </RelativeLayout>

</RelativeLayout>