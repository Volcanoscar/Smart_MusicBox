<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

 <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="2.1"
            android:orientation="horizontal">
            
  <TextView  android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2.1"      
                    android:background="@drawable/audioctrl_bg"     
                    android:text="音 效"  
                    android:textColor="@color/white"    
                    android:textSize="@dimen/text_title" 
                    android:gravity="center" />
  
 <GridView
            android:id="@+id/audio_yinxiao"
            android:background="@drawable/yinxiao"           
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="7.9"       
            android:numColumns="3"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp"
            android:stretchMode="columnWidth"
            android:gravity="center"/>
</LinearLayout>
<FrameLayout 
	android:layout_width="fill_parent"
	android:layout_height="0dip"
	android:layout_weight="2.5"
	>
	
    <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="horizontal">
            
  <TextView  android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2.1"                                 
                    android:background="@drawable/audioctrl_bg"     
                    android:text="灯 光"  
                    android:textColor="@color/white"    
                    android:textSize="@dimen/text_title" 
                    android:gravity="center" />
 <GridView
            android:id="@+id/audio_light"
            android:background="@drawable/lights"            
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="7.9"        
            android:numColumns="2"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp"
            android:stretchMode="columnWidth"
            android:gravity="center"/> 
 </LinearLayout>
 
    <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
              
  <View  android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="4.65" /> 
                    
  <!-- 灯光控制开关-->
 <Button
            android:id="@+id/lightscontrol"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:padding="25dip"
            android:layout_weight="3.2"
            android:background="@android:color/transparent" />
 
 <View  android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2.15" /> 
 </LinearLayout>
       
</FrameLayout>
</LinearLayout>
