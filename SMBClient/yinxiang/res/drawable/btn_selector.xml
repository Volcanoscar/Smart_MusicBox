<?xml version="1.0" encoding="utf-8"?> 

<selector xmlns:android="http://schemas.android.com/apk/res/android"> 

<!--默认效果-->  
<item android:state_enabled="true"  android:state_pressed="false" android:state_focused="false">
    <shape android:shape="rectangle">
    <!-- size android:width="200dp"
        android:height="300dp"/>
    < solid android:color="#FF61B400"/-->
    <stroke android:width="1dp"
        android:color="#AAAAAAAA"/>
        <gradient android:startColor="#FFb8c901"
            android:centerColor="#FFb8c901"
            android:endColor="#FFb8c901"
            android:angle="270"
        />
        <corners android:radius="10dp"/>
            <!--  渐变角度 只能被45整除  -->
    </shape>
    </item>


    <!--按下时效果-->  
    <item android:state_pressed="true" >
    <shape android:shape="rectangle">
    <!-- size android:width="200dp"
        android:height="300dp"/>
    < solid android:color="#FF61B400"/-->
    <stroke android:width="1dp"
        android:color="#AA61B400"/>
        <gradient android:startColor="#FF3BA316"
            android:centerColor="#FF58BC2A"
            android:endColor="#FF7AD941"
            android:angle="270"
        />
        <corners android:radius="10dp"/>
            <!--  渐变角度 只能被45整除  -->
    </shape>
    </item>
    <!--焦点效果-->  
    <item android:state_focused="true" > 
    <shape android:shape="rectangle">
    <!-- size android:width="200dp"
        android:height="300dp"/>
    < solid android:color="#FF61B400"/-->
    <stroke android:width="1dp"
        android:color="#AA61B400"/>
        <gradient android:startColor="#FF7AD941"
            android:centerColor="#FF58BC2A"
            android:endColor="#FF7AD941"
            android:angle="270"
        />
        <corners android:radius="10dp"/>
            <!--  渐变角度 只能被45整除  -->
    </shape>
    </item>

</selector> 

