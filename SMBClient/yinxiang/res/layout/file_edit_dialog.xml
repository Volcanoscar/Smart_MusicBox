<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="200dip"
    android:background="@drawable/edit_bg"
    android:orientation="vertical"
    android:paddingLeft="25dip"
    android:paddingRight="23dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <!-- 删除 -->
        <ImageView
            android:id="@+id/fileedit_cancle"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="8dip"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/edit_remove" />
  <!-- 重命名 -->
  <ImageView
            android:id="@+id/fileedit_rename"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="8dip"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/edit_rename" />
  
  <!-- 闹铃 -->
        <ImageView
            android:id="@+id/fileedit_clock"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="8dip"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/edit_clock" />

       <ImageView
            android:id="@+id/fileedit_copy1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="8dip"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/edit_copy1" />
     
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal" >

          <ImageView
            android:id="@+id/fileedit_copy2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="8dip"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/edit_copy2" />

        <ImageView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="8dip"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="8dip"           
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="8dip"         
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>