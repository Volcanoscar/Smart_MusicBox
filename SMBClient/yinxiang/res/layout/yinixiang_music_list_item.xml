<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="60dip"
              android:paddingLeft="2dip"
              android:paddingBottom="2dip"
              android:background="@android:color/transparent">

    <!-- 序号 -->
    <TextView
            android:id="@+id/yinxiang_music_item_index"
            android:layout_height="50dip"
            android:layout_width="30dip"
            android:layout_alignParentLeft="true"
            android:gravity="center"/>"

    <!-- 歌曲 -->
    <TextView
            android:id="@+id/yinxiang_music_item_name"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/yinxiang_music_item_index"
            android:layout_alignBaseline="@id/yinxiang_music_item_index"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:singleLine="true"
            android:ellipsize="marquee"          
            android:marqueeRepeatLimit="marquee_forever"/>
    
    
    
    <TextView
            android:id="@+id/yinxiang_music_item_path"
            android:layout_width="10dip"
            android:layout_height="1dip"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/yinxiang_music_item_index"          
            android:visibility="invisible"/>

    
    
    <CheckBox
            android:id="@+id/yinxiang_music_item_checked"
            android:layout_width="22dip"
            android:layout_height="22dip"
            android:layout_toLeftOf="@id/yinxiang_music_item_path"           
             android:layout_centerVertical="true"
            style="@style/MyCheckBox"   
            />
    
    <ImageView
            android:id="@+id/yinxiang_music_item_edit"
            android:layout_width="22dip"
            android:layout_height="22dip"
            android:layout_marginRight="30dip"
            android:layout_toLeftOf="@id/yinxiang_music_item_checked"
            android:background="@drawable/file_edit"
            android:layout_centerVertical="true"/>
    
    
    
    <!-- 分割线 -->
    <ImageView     
            android:layout_width="match_parent"
            android:layout_height="1dip"  
            android:layout_alignParentLeft="true" 
            android:layout_below="@id/yinxiang_music_item_index"
            android:background="@drawable/separator"/>"

</RelativeLayout>