<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bidir_sliding_layout"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/right_menu"
        android:layout_width="150dip"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:background="#00ffcc"
        android:visibility="gone" >
        <include layout="@layout/sidemenu" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dip"     
        android:orientation="vertical" >
                
        <ImageView
            android:id="@+id/ball"
            android:layout_width="71dip"
            android:layout_height="72dip"
            android:background="@drawable/smoothball"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dip"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="horizontal" >

	        <View 
		        android:layout_width="0dip"
		        android:layout_height="0dp"
		        android:layout_weight="1"/>
		    <LinearLayout 	
		        android:id="@+id/img_volume"        
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:background="@drawable/tv_control_menu"
					>
			    <!-- ImageView 
			        android:id="@+id/img_volume"	        	        
			        
			        android:layout_width="match_parent"	
			        android:layout_height="match_parent"  
			        android:layout_gravity="center"
			        /
                    -->

                    <Button
                        android:id="@+id/volume1"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent" />

                    <Button
                        android:id="@+id/volume2"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent" />

                    <Button
                        android:id="@+id/tv"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent" />

                    <Button
                        android:id="@+id/channel"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent" />

                    <Button
                        android:id="@+id/btn_menu"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent" />
                </LinearLayout>

		    <View 
		        android:layout_width="0dip"
		        android:layout_height="0dp"
		        android:layout_weight="1"
		        />
            </LinearLayout>

            <RelativeLayout
	        android:layout_width="match_parent"
		    android:layout_height="0dip"
	        android:layout_weight="6"
			android:layout_marginLeft="40dip" 
			android:layout_marginRight="40dip"		
		    android:layout_marginTop="35dip" 
		    android:layout_marginBottom="30dip">
		    
	        <ImageView
		        android:id="@+id/img_d"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:scaleType="fitCenter"
		        android:background="@drawable/tv_control_direction" 
	        />
	        <LinearLayout 	        
		        android:layout_width="match_parent"
			    android:layout_height="match_parent"
				android:orientation="horizontal"
				android:layout_alignParentTop="true" android:layout_alignParentRight="true"
				android:layout_alignParentEnd="true" android:layout_alignParentBottom="true">
			    <LinearLayout
			        android:orientation="vertical"
			        android:layout_width="0dip"
			        android:layout_height="match_parent"
			        android:layout_weight="1"
						>
			        <View
			            android:layout_width="match_parent"
			        	android:layout_height="0dip" 
			        	android:layout_weight="1"
			            />
			        <Button 
			            android:id="@+id/left"
			            android:background="@drawable/left_back"
			            android:layout_width="match_parent"
			        	android:layout_height="0dip"
						android:layout_weight="1"
			            />
			        <View
			            android:layout_width="match_parent"
			        	android:layout_height="0dip" 
			        	android:layout_weight="1"
			            />
			    </LinearLayout>
			    <LinearLayout
			        android:orientation="vertical"
			        android:layout_width="0dip"
			        android:layout_height="match_parent"
			        android:layout_weight="1"
			        >
			        <Button 
			            android:id="@+id/up"
			            android:background="@drawable/up_back"
			            android:layout_width="match_parent"
			        	android:layout_height="0dip"
						android:layout_weight="1"
			            />
                        <Button
                            android:id="@+id/center"
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="1"
                            android:background="@drawable/center_back" />

                        <Button
                            android:id="@+id/down"
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="1"
                            android:background="@drawable/up_back" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <View
			            android:layout_width="match_parent"
			        	android:layout_height="0dip" 
			        	android:layout_weight="1"
			            />
			        <Button 
			            android:id="@+id/right"
			            android:background="@drawable/left_back"
			            android:layout_width="101dp"
			        	android:layout_height="0dip"
						android:layout_weight="0.97"
			            />
			        <View
			            android:layout_width="match_parent"
			        	android:layout_height="0dip" 
			        	android:layout_weight="1"
			            />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

	    <LinearLayout 
	        android:layout_height="0dip"
	        android:layout_width="match_parent"
	        android:orientation="horizontal"	        
	        android:layout_weight="1"
	        android:layout_marginLeft="15dip"
	        android:layout_marginRight="15dip"
	        android:layout_marginBottom="10dip">
	        
                <Button
                    android:id="@+id/btn_home"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/btn_home_selector" />

                 <View
			            android:layout_height="match_parent"
			        	android:layout_width="0dip" 
			        	android:layout_weight="3"
			            />
                 
                <Button
                    android:id="@+id/btn_b"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/btn_b_selector" />

            
            </LinearLayout>
        </LinearLayout>
                  
    </RelativeLayout>

</RelativeLayout>