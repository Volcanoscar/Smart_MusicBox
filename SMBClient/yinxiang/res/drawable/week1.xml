<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 默认时的背景图片 -->
    <item android:state_pressed="false" android:drawable="@drawable/alarm1_up"/>
    <!-- 触摸模式下单击时的背景图片 -->
    <item android:state_pressed="true" android:drawable="@drawable/alarm1_down" />
    <!-- 选中时的图片背景 -->
    <item android:drawable="@drawable/alarm1_down" android:state_selected="true"/>
    <!-- 获得焦点时的图片背景 -->
    <item android:drawable="@drawable/alarm1_down" android:state_focused="true"/>

</selector>